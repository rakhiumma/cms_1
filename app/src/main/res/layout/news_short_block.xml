<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="3dp"
    android:paddingBottom="3dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/img1"
        android:layout_centerVertical="true"
        android:id="@+id/ll1"
        android:layout_marginEnd="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Family Law"
            android:textSize="14dp"
            android:textColor="@color/purple_700"
            android:fontFamily="monospace"
            android:textFontWeight="600"
            android:id="@+id/topic_title"
            android:layout_marginStart="15dp"
            android:drawableLeft="@drawable/ic_baseline_feed_24"
            android:drawablePadding="3dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Family law news headlines about family new head lines"
            android:textSize="18sp"
            android:layout_marginStart="15dp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:id="@+id/news_message_title"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/img1"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:src="@drawable/family_law_sample"
        android:scaleType="fitXY"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heading - 10 minutes ago"
        android:layout_below="@id/ll1"
        android:layout_marginStart="15dp"
        android:id="@+id/news_time_text"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/news_time_text"
        android:layout_marginTop="5dp"
        android:background="#D3D3D3"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        />


</RelativeLayout>